{{page-title 'D6 Abilities'}}
<h1>D6 Abilities</h1>
For the various categories of abilities and their descriptions see the tabview below.
<br><br>
     <ul class="nav nav-tabs" role="tablist">
           <li role="presentation" class="nav-item"><a href="#d6attrlist" aria-controls="d6attrlist" role="tab" data-bs-toggle="tab" class="nav-link active">Attributes</a></li>
           <li role="presentation" class="nav-item"><a href="#d6skilllist" aria-controls="d6skilllist" role="tab" data-bs-toggle="tab" class="nav-link">Skills</a></li>
           {{#if this.model.extranormal_attrs}}
              <li role="presentation" class="nav-item"><a href="#d6extranormal" aria-controls="d6extranormal" role="tab" data-bs-toggle="tab" class="nav-link">Extranormal Abilities</a></li>
           {{/if}}
           <li role="presentation" class="nav-item"><a href="#d6advantagelist" aria-controls="d6advantagelist" role="tab" data-bs-toggle="tab" class="nav-link">Advantages</a></li>
           <li role="presentation" class="nav-item"><a href="#d6disadvantagelist" aria-controls="d6disadvantagelist" role="tab" data-bs-toggle="tab" class="nav-link">Disadvantages</a></li>
           <li role="presentation" class="nav-item"><a href="#d6speciallist" aria-controls="d6speciallist" role="tab" data-bs-toggle="tab" class="nav-link">Special Abilities</a></li>
         </ul>
  <div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="d6attrlist">
<AnsiFormat @text={{this.model.attrs_blurb}} />

<table class="table table-striped">

<thead>
    <th>Attribute</th>
    <th>Description</th>
</thead>

<tbody>
{{#each this.model.attrs as |attr| }}
<tr>
    <td>{{attr.name}}</td> 
    <td>{{attr.desc}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>
  <div role="tabpanel" class="tab-pane" id="d6skilllist">
<AnsiFormat @text={{this.model.skills_blurb}} />

<table class="table table-striped">

<thead>
    <th>Skill</th>
    <th class="hidden-xs hidden-sm">Linked Attribute</th>
    <th>Description</th>
</thead>

<tbody>
{{#each this.model.skills as |ability| }}
<tr>
    <td>{{ability.name}}</td> 
    <td class="hidden-xs hidden-sm">{{ability.linked_attr}}</td> 
    <td>{{ability.desc}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>

  <div role="tabpanel" class="tab-pane" id="d6extranormal">
<AnsiFormat @text={{this.model.extranormal_blurb}} />

<h3>Attributes</h3>
<table class="table table-striped">

<thead>
    <th>Attribute</th>
    <th>Description</th>
</thead>

<tbody>
{{#each this.model.extranormal_attrs as |attr| }}
<tr>
    <td>{{attr.name}}</td>
    <td>{{attr.desc}}</td>
</tr>
{{/each}}
</tbody>
</table>


<h3>Skills</h3>
<table class="table table-striped">

<thead>
    <th>Skill</th>
    <th class="hidden-xs hidden-sm">Linked Attribute</th>
    <th>Description</th>
</thead>

<tbody>
{{#each this.model.extranormal_skills as |ability| }}
<tr>
    <td>{{ability.name}}</td>
    <td class="hidden-xs hidden-sm">{{ability.linked_attr}}</td>
    <td>{{ability.desc}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>

  <div role="tabpanel" class="tab-pane" id="d6advantagelist">
<AnsiFormat @text={{this.model.advantages_blurb}} />

<table class="table table-striped">

<thead>
    <th>Advantage</th>
    <th>Description</th>
    <th>Ranks</th>
</thead>

<tbody>
{{#each this.model.advantages as |adv| }}
<tr>
   <td>{{adv.name}}</td> 
   <td>{{adv.desc}}</td>
   <td>{{adv.ranks}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>

  <div role="tabpanel" class="tab-pane" id="d6disadvantagelist">
<AnsiFormat @text={{this.model.disadvantages_blurb}} />

<table class="table table-striped">

<thead>
    <th>Disadvantage</th>
    <th>Description</th>
    <th>Ranks</th>
</thead>

<tbody>
{{#each this.model.disadvantages as |dis| }}
<tr>
   <td>{{dis.name}}</td>
   <td>{{dis.desc}}</td>
   <td>{{dis.ranks}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>

  <div role="tabpanel" class="tab-pane" id="d6speciallist">
<AnsiFormat @text={{this.model.special_abilities_blurb}} />

<table class="table table-striped">

<thead>
    <th>Special Ability</th>
    <th>Description</th>
    <th>Cost</th>
</thead>

<tbody>
{{#each this.model.special_abilities as |spec| }}
<tr>
   <td>{{spec.name}}</td>
   <td>{{spec.desc}}</td>
   <td>{{spec.cost}}</td>
</tr>
{{/each}}
</tbody>
</table>
</div>
</div>

{{outlet}}
