    <td class="hidden-xs hidden-sm">{{ability.linked_attr}}</td>
    <td>{{ability.desc}}</td>
</tr>
{{/each}}
</tbody>
</table>


<h2>Advantages</h2>

<AnsiFormat @text={{this.model.advantages_blurb}} />

<table class="table table-striped">

<thead>
    <th>Advantage</th>
    <th>Description</th>
    <th>Ranks</th>
</thead>

<tbody>
{{#each this.model.advantages as |adv| }}
<tr>
   <td>{{adv.name}}</td> 
   <td>{{adv.desc}}</td>
   <td>{{adv.ranks}}</td>
</tr>
{{/each}}
</tbody>
</table>

