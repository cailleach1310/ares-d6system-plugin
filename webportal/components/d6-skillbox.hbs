<div class="row fs3-abilitybox"> 
  <div class="col col-sm-7">
    {{yield}}
  </div>

  <div class="col col-sm-5">
    <div class="fs3-rating-control">
   {{#if (eq this.rating '0D+0') }}
      <button class="fs3-skillbutton" {{this.learnSkill}}>learn</button>
    {{else}}
      <button class="fs3-skillbutton" {{this.lowerSkill}}>-</button>

      <div class="fs3-rating-display">
         {{this.combinedRating}} ({{this.rating}})
      </div>

      <button class="fs3-skillbutton" {{this.raiseSkill}}>+</button>
    {{/if}}
    </div>
    
  </div>

</div>
